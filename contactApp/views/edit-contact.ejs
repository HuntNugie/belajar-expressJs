<%- include('layouts/head.ejs') %>

<div class="container mt-5">
    <h1>Halaman edit contact</h1>
    <div class="card bg-info w-auto">
        <div class="card-body">
              <div class="row">
        <div class="col-12">
            <form method="POST" action="/contact">
                <input type="hidden" name="oldEmail" value="<%= contact.email %>">
                <% if (errors.length !== 0) { %>
                 <div class="mb-3">
                    <div class="alert alert-danger" role="alert">
                        <ul>
                        <% errors.forEach(element => { %>
                            <li><%= element.msg %></li>
                        <% }) %>
                        </ul>
                    </div>
                 </div>
                <% } %>
                <div class="mb-3">
                    <label for="nama" class="form-label">Nama lengkap</label>
                    <input type="text" class="form-control" id="nama" name="nama" required value="<%= contact.nama %>" />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" required value="<%= contact.email %>" />
                    <div id="emailHelp" class="form-text">Kita tidak akan membagikan email anda</div>
                </div>
                <div class="mb-3">
                    <label for="nohp" class="form-label">Nomor handphone</label>
                    <input type="tel" class="form-control" id="nohp" name="nohp" required value="<%= contact.nohp %>" />
                </div>
                <button type="submit" class="btn btn-primary">Edit data</button>
            </form>
        </div>
    </div>
        </div>
    </div>
</div>

<%- include('layouts/footer.ejs') %>
